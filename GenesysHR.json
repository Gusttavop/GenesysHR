        PAUSAS_AGENDADAS.sort((a,b)=>a.hora.localeCompare(b.hora));
        salvarHorariosLocalStorage(PAUSAS_AGENDADAS);
        
        iH.value='';iS.value='';
        renderizarAgendamentos();
        recalcularAgendamentosEmTempoReal();

